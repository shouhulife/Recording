<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title"/>

    <EditText
        android:id="@+id/addbirth_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="姓名"
        android:layout_margin="@dimen/px_30"/>
    <EditText
        android:id="@+id/addbirth_et_gx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="关系"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"/>

    <EditText
        android:id="@+id/addbirth_et_bz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="备注"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_margin="@dimen/px_30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/addbirth_tv_date"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="生日:2016-01-01"
            android:textColor="@color/text333"
            android:textSize="@dimen/px_30"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/addbirth_tv_btn_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择日期"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:background="@color/bg_blue"
            android:textSize="@dimen/px_30"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line3"/>
    <Button
        android:id="@+id/addbirth_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:text="提交"
        android:background="@color/bg_blue"
        android:textSize="@dimen/px_30"
        android:textColor="@color/white"
        android:layout_margin="@dimen/px_30"/>

</LinearLayout>
