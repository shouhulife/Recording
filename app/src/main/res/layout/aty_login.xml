<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_loginbg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_295"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_146"
            android:text="WelCome"
            android:gravity="center"
            android:textSize="@dimen/px_56"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/px_38"
                android:layout_height="@dimen/px_38"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/ico_loginusername" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_til_name"
                android:layout_margin="@dimen/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入用户名"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@color/line3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/px_38"
                android:layout_height="@dimen/px_38"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@mipmap/ico_loginpwd" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_til_pwd"
                android:layout_margin="@dimen/px_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入密码"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="13.33dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:textSize="@dimen/space_18"
        android:visibility="gone" />

    <Button
        android:id="@+id/login_but_login"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_84"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/bg_blue"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/px_38" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_zc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/px_45"
            android:text="免费注册"
            android:textColor="@color/blue_092d"
            android:textSize="@dimen/px_31" />

        <TextView
            android:id="@+id/login_tv_wjmm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingTop="@dimen/px_45"
            android:text="忘记密码"
            android:textColor="@color/blue_092d"
            android:textSize="@dimen/px_31" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
